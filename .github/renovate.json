{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "renovate/reconfigure"
  ],
  "postUpgradeTasks": {
    "commands": [
      "yarn",
      "yarn run build"
    ],
    "fileFilters": [
      "dist/index.js"
    ],
    "executionMode": "branch"
  }
}
